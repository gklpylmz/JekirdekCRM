<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Jekirdek</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex min-vh-100">
        <aside class="sidebar bg-primary text-white p-3 d-flex flex-column" style="width: 250px;">
            <div class="logo fs-4 fw-bold mb-4">JekirdekCRM.</div>
            <nav class="menu nav flex-column">
                <a href="/Index/" class="nav-link text-white active" aria-current="page">Dashboard</a>
                <a href="/Customer/Index/" class="nav-link text-white">Müşteri</a>
            </nav>
        </aside>

        <main class="flex-grow-1 p-4" style="background-color: var(--background);">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-primary">@ViewBag.Header</h1>
                  <a asp-page="/Logout"  class="btn btn-danger">Çıkış Yap</a>
            </header>

            <section class="content">
                @RenderBody()
            </section>
        </main>
    </div>
</body>
</html>